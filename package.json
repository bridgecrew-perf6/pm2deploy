{
  "name": "harmony-uikit",
  "author": "Aditya Pratama Nur - Weekend",
  "version": "0.1.0",
  "private": true,
  "main": "build/lib/components/index.js",
  "dependencies": {
    "moment": "^2.22.2",
    "node-sass-chokidar": "^1.3.0",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "react-day-picker": "^7.1.10",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-info": "^3.4.8",
    "@storybook/react": "^3.4.8",
    "@svgr/cli": "^2.1.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "cpx": "^1.5.0",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "copy-css-to-lib": "npm-run-all -s copy-base-css copy-component-css",
    "copy-base-css": "cpx \"./src/**/*.css\" ./build/lib/",
    "copy-base-assets": "cpx \"./public/assets/**\" ./build/lib/assets/",
    "copy-component-css": "cpx \"./src/components/**/*.css\" ./build/lib/components",
    "build-icon": "svgr --icon --replace-attr-values '#231f20=currentColor' -d src/components/Icon/assets/build/ src/components/Icon/assets/src/",
    "build-js": "rm -rf build && NODE_ENV=production babel src/components --out-dir build/lib/components --copy-files --ignore __tests__,spec.js,test.js,__snapshots__,css,md,scss",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-icon && npm run build-js && npm run build-css && npm run copy-css-to-lib",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./public",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "compile-js-unused": "react-scripts build"
  },
  "files": [
    "build/lib"
  ]
}

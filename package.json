{
  "name": "react-starter",
  "author": "Aditya Pratama Nur - Weekend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apicase/adapter-fetch": "^0.15.1",
    "@apicase/core": "^0.17.2",
    "@apicase/services": "^0.8.2",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "fingerprintjs2": "^1.8.1",
    "helmet": "^3.13.0",
    "js-cookie": "^2.2.0",
    "node-sass": "^4.9.3",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@svgr/cli": "^2.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "cpx": "^1.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react-scripts": "2.0.3",
    "stylelint": "^9.6.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "scripts": {
    "lint:js": "eslint src",
    "lint:scss": "stylelint '**/*.scss' --config=.stylelintrc.json",
    "build-icon": "svgr --icon --replace-attr-values '#231f20=currentColor' --out-dir src/components/Icon/assets/build/ src/components/Icon/assets/src/",
    "build-js": "react-scripts build",
    "start-js": "react-scripts start",
    "start": "npm run start-js",
    "build": "npm run build-icon && npm run build-js",
    "deploy": "node server.js",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./public",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compile-js-unused": "react-scripts build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,md}": [
      "eslint --fix src",
      "git add"
    ],
    "src/**/*.{scss}": [
      "stylelint '**/*.scss' --config=.stylelintrc.json --fix",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
